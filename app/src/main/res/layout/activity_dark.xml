<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_mode"
    tools:context=".DarkActivity"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="136dp"
        android:orientation="horizontal">


        <RadioGroup
            android:id="@+id/toggleDark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/pink_out_line"
            android:checkedButton="@+id/offDark"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/onDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="ON"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/offDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="OFF"
                android:textColor="@color/white" />
        </RadioGroup>


        <!-- <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Normal Mode"
             android:textSize="25sp"
             android:textColor="#9e9595"
             android:padding="5dp"
             android:layout_weight="1.5"
             />

         <Switch
             android:id="@+id/startOne"
             android:layout_width="0dp"
             android:layout_weight="0.5"
             android:layout_height="wrap_content"

             />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/adView_bottommenuDark"
        android:layout_marginBottom="3dp"
        android:background="#6a0cc9"
        android:clickable="false"
        android:orientation="horizontal" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_bottommenuDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:visibility="visible"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/adView_bottommenuDark"
        android:background="#6a0cc9"
        android:clickable="false"
        android:orientation="horizontal" />


</RelativeLayout>